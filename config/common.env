# Common Configuration Variables
# This file contains all non-sensitive configuration variables

# Project Configuration
PROJECT_NAME=uncloud
PROJECT_VERSION=1.0.0
ENVIRONMENT=production

# Network Configuration
FRONTEND_NETWORK=uncloud_frontend
BACKEND_NETWORK=uncloud_backend
INFRASTRUCTURE_NETWORK=uncloud_infrastructure

# Volume Configuration
SHARED_DATA_VOLUME=uncloud_shared_data
SECRETS_VOLUME=uncloud_secrets

# Service Ports (Random ports for security)
PASSWORDMANAGER_PORT=8473
SYNCSERVICE_PORT=9251
WEBSITE_PORT=6347
EMAIL_BACKEND_PORT=7842
DATABASE_PORT=5931
PWDMANAGER_BACKEND_PORT=8474
NAS_PORT=7153
TRAEFIK_PORT=8080
DNS_PORT=5353
LOADBALANCER_PORT=8081

# Domain Configuration
DOMAIN_NAME=yourdomain.com
SUBDOMAIN_PASSWORDMANAGER=pwd
SUBDOMAIN_SYNC=sync
SUBDOMAIN_WEBSITE=www

# SSL/TLS Configuration
SSL_EMAIL=admin@yourdomain.com
SSL_PROVIDER=letsencrypt

# Load Balancer Configuration
LOADBALANCER_ALGORITHM=roundrobin
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_VERSION=15
DATABASE_NAME=uncloud_db

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_RETENTION_DAYS=90

# Security Configuration
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m 